{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es2016"],
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es6",
    "resolveJsonModule": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./@types"
  ],
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
