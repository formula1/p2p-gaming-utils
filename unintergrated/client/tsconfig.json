{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es5", "es6", "es2015", "dom"],
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es5",
    "jsx": "react"
  },
  "typeRoots": [
    "./node_modules/@types",
    "./@types"
  ],
  "files": [
    "src/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
